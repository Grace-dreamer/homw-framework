<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<!-- base-package 如果多个，用“,”分隔 -->
	<context:component-scan base-package="com.homw.message" use-default-filters="true"/>
	
    <context:property-placeholder location="#{(systemProperties['confpath']?:'classpath:')+'conf/message_proxy.properties'}"/>

    <bean id="jpushClient" class="cn.jpush.api.JPushClient">
        <constructor-arg index="0" value="${jpush.masterSecret}"/>
        <constructor-arg index="1" value="${jpush.appKey}"/>
        <constructor-arg index="2" value="${jpush.maxRetry}"/>
    </bean>
    
    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basename" value="classpath:messages"/>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>
    
    <bean id="errorMessageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
    	<property name="basename" value="classpath:error_messages"/>
        <property name="defaultEncoding" value="UTF-8"/>
	</bean>
</beans>